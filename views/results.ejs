<head>
  <% include partials/head %>
</head>

<header>
  <% include partials/header %>
</header>

<div class="container">
  <div>
    <h3>Search Results:</h3>

  <!-- NEW TRIAL RENDER -->
    <ul>
      <% data["results"].forEach(function(movie) { %>

          <div>
            <li>
              <form action="/" method="post">

                  <label for="Title"><h5><%= movie["original_title"]%></h5></label><br>
                  <input type="hidden" name="original_title" value="<%= movie["original_title"]%>">

                  <label for="Poster"><img src="https://image.tmdb.org/t/p/w500<%= movie["poster_path"]%>" ></label><br>
                  <input type="hidden" name="poster_path" value="<%= movie["poster_path"]%>">
                  <br>
                  <button type="submit" class="btn1 btn waves-effect waves-light"> Save </button>
              </form>
            </li>
          </div>
      <% }) %>
    </ul>
  </div>
</div>


<div class="container">
  <a href="/search" class="btn1 btn waves-effect waves-light">Search Again</a>
</div>
<footer>
  <% include partials/footer %>
</footer>
